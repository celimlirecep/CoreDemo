@model Blog
@{
    ViewData["Title"] = "Blog Add";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="d-flex justify-content-center">
    <div class="w-100  mt-3  w-75">
        <form asp-action="BlogAdd" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label for="exampleInputEmail1 mb-2">Blog Başlığı</label>
                <input type="text" class="form-control" asp-for="BlogTitle" required="">

            </div>
            <div class="form-group">
                <label for="exampleInputPassword1 mb-2">Blog Küçük Görsel</label>
                <input type="text" class="form-control" asp-for="ThumbNailImage" placeholder="" required=""> </input>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1 mb-2">Kategori Id</label>
                <input type="number" class="form-control" asp-for="CategoryID" placeholder="" required=""> </input>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1 mb-2">Blog İçeriği</label>
                <textarea type="text" height="500px" class="form-control" asp-for="BlogContent" placeholder="" required=""> </textarea>
            </div>


            <button type="submit" class="btn btn-primary submit mb-4">kaydet</button>
            
        </form>

    </div>

</div>
