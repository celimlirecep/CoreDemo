
@model List<CoreDemo.Controllers.EmployeeTestController.Class1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Adı Soyadı</th>
            <th>Sil</th>
            <th>Düzenle</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID    </td>
                <td>@item.Name    </td>
                <td><a href="/EmployeeTest/DeleteEmployee/@item.ID" class="btn btn-outline-danger">Sil</a>   </td>
                <td><a href="/EmployeeTest/EditEmployee/@item.ID" class="btn btn-outline-info">Düzenle</a>   </td>

            </tr>
        }
    </tbody>



</table>
<a href="/EmployeeTest/AddEmployee" class="btn btn-success">Yeni Çalışan Ekle</a>